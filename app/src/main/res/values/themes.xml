<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="NepZepTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_theme</item>
        <item name="colorPrimaryVariant">@color/color_theme</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/color_theme</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="black_color">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="app_theme_color">@color/color_theme</item>
        <item name="app_background_color">@color/white</item>
        <item name="white_color">@color/white</item>
        <item name="active_text_black_color">@color/black</item>
