<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.UnderReviewProfileActivity">

    <data class="UnderReviewProfileActivityBinding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_under_review" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TwentyBlackBoldTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/lbl_under_review_profile" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/verificationmsgACTxtView"
            style="@style/TenBlackRegularTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="@string/lbl_under_review_profile_desc" />
    </LinearLayout>

</layout>