<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.HelpAndSupportActivity">

    <data class="HelpAndSupportActivityBinding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/helpAndSupportToolbar"
            layout="@layout/toolbar_layout" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_16sdp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_220sdp"
                    android:layout_margin="@dimen/_12sdp"
                    android:src="@drawable/ic_group_support" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_16sdp"
                    android:text="@string/msg_need_some_helps"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/msg_support"
                    android:layout_margin="@dimen/_8sdp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/callBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:gravity="center"
                    android:text="@string/lbl_contact_us"
                    android:textAllCaps="false"
                    style="@style/BlackBackgroundRegularButtonTheme"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/emailBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:gravity="center"
                    android:text="@string/lbl_support_nepzep"
                    android:textAllCaps="false"
                    style="@style/WhiteBackgroundButtonTheme"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/faqBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="@string/lbl_frequently_asked_questions"
                    style="@style/WhiteBackgroundButtonTheme"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>