<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data class="AdapterDeliveredOrderListBinding"/>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="-1dp"
    app:cardUseCompatPadding="false">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/nameLinLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_4sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/orderTypeTxtView"
                    style="@style/EightGrayRegularTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subscriber" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/customerNameTxtView"
                    style="@style/TwelveBlackNormalTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    tools:text="Sunil Patel" />
            </LinearLayout>

            <ImageView
                android:id="@+id/deliveredImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/ic_delivered" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/deliverTxtView"
                style="@style/TenBlackBoldTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_toStartOf="@+id/deliveredImageView"
                android:text="@string/lbl_delivered"
                android:textAllCaps="false" />

            <ImageView
                android:id="@+id/notDeliverImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/ic_not_delivered" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/notDeliverTxtView"
                style="@style/TenBlackBoldTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_toStartOf="@+id/notDeliverImageView"
                android:text="@string/lbl_not_delivered"
                android:textAllCaps="false" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/EightGrayRegularTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_delivery_time" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/deliveryTimeTxtView"
                    style="@style/TwelveBlackNormalTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="8-10 Mor" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:background="@color/color_bottomsheet" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/EightGrayRegularTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_total_quality" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/totalQualityTxtView"
                    style="@style/TwelveBlackNormalTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="003648248" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:background="@color/color_bottomsheet" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/EightGrayRegularTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_order_id" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/orderIdTxtView"
                    style="@style/TwelveBlackNormalTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="003648248" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@color/color_bottomsheet" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:overScrollMode="never"
            android:scrollIndicators="left"
            android:scrollbarSize="@dimen/_1sdp">

            <LinearLayout
                android:id="@+id/itemProductListLnrLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@color/color_bottomsheet" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/addressTxtView"
                style="@style/TwelveGrayRegularTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8sdp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Amul Dairy Rd, Popati Nagar, Anand, Gujarat 388001" />


        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/amountRltLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_weight="1"
                android:orientation="vertical">

                <View
                    android:id="@+id/amountView"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_bottomsheet" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/amounttTxtView"
                    style="@style/SixteenBlackBoldTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/amountView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:src="@drawable/ic_vacation"
                    android:text="80"
                    android:textColor="@color/color_green" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lbl_amountCollected"
                    style="@style/TwelveGrayRegularTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/amounttTxtView"
                    android:layout_centerHorizontal="true"

                    android:text="@string/lbl_cash_collected"
                    android:textAllCaps="false"
                    android:textColor="@color/color_green"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/lbl_amountCollected"
                    android:layout_alignStart="@id/lbl_amountCollected"
                    android:layout_alignEnd="@id/lbl_amountCollected"
                    android:background="@color/color_green" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relVacation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_weight="1"
                android:orientation="vertical">

                <View
                    android:id="@+id/vactionModeview"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_bottomsheet" />

                <ImageView
                    android:id="@+id/icVac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vactionModeview"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/ic_vacation" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lblVac"
                    style="@style/TwelveGrayRegularTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icVac"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="@string/lbl_vacation"
                    android:textAllCaps="false" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/lblVac"
                    android:layout_alignStart="@id/lblVac"
                    android:layout_alignEnd="@id/lblVac"
                    android:background="@color/color_bottomsheet" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</layout>